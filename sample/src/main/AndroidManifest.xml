<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.zackratos.ultimatebar.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrawableBarActivity"
            android:label="DrawableBar" />
        <activity android:name=".TransparentBarActivity1"
            android:label="transparent"/>
        <activity android:name=".HideBarActivity1"
            android:label="hide"/>
        <activity android:name=".ImmersionBarActivity"
            android:label="immersion"/>
        <activity android:name=".HideBarActivity2"
            android:label="hide"/>
        <activity android:name=".TransparentBarActivity2"
            android:label="transparent"/>
        <activity android:name=".DrawerActivity"
            android:label="DrawerDrawableBar"/>
        <activity android:name=".FragmentActivity" />
    </application>

</manifest>