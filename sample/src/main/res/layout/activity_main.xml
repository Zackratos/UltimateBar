<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.zackratos.ultimatesample.com.github.zackratos.ultimatebar.ultimatesample.MainActivity">

    <include
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/color_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color_Bar"/>
            <Button
                android:id="@+id/immersion_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immersion_Bar"/>
            <Button
                android:id="@+id/transparent_bar_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transparent_Bar_1"/>

            <Button
                android:id="@+id/transparent_bar_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transparent_Bar_2"/>

            <Button
                android:id="@+id/hide_bar_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hide_Bar_1"/>

            <Button
                android:id="@+id/hide_bar_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hide_Bar_2"/>

            <Button
                android:id="@+id/drawer_color_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="drawer_color_bar"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
